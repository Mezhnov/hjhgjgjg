namespace MauiApp3
{
    public partial class MainPage : ContentPage
    {
        public MainPage()
        {
            InitializeComponent();
            InitializeMockData();
        }

        private void InitializeMockData()
        {
            SceneObjectsList.ItemsSource = new List<SceneObject>
            {
                new SceneObject { Name = "Lighting", Icon = "üí°" },
                new SceneObject { Name = "DirectionalLight", Icon = "‚òÄÔ∏è" },
                new SceneObject { Name = "SkyLight", Icon = "üå§" },
                new SceneObject { Name = "ExponentialHeightFog", Icon = "üå´" },
                new SceneObject { Name = "SphereReflectionCapture", Icon = "üîÆ" },
                new SceneObject { Name = "FirstPersonCharacter", Icon = "üßç" },
                new SceneObject { Name = "Linear Stair Brush", Icon = "ü™ú" },
                new SceneObject { Name = "SM_Couch", Icon = "üõã" },
                new SceneObject { Name = "TemplateLabel", Icon = "üè∑" }
            };
        }

        private void OnSaveClicked(object sender, EventArgs e)
        {
            DisplayAlert("Engine", "Saved.", "OK");
        }

        public class SceneObject
        {
            public string? Name { get; set; }
            public string? Icon { get; set; }
        }
    }
}
