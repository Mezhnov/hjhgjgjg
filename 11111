// ==================== ЗАМЕНИ ЭТУ ФУНКЦИЮ ====================
@Composable
fun TelegramLogo() {
    val infiniteTransition = rememberInfiniteTransition(label = "logo_animation")

    val rotation by infiniteTransition.animateFloat(
        initialValue = -5f,
        targetValue = 5f,
        animationSpec = infiniteRepeatable(
            animation = tween(2000, easing = FastOutSlowInEasing),
            repeatMode = RepeatMode.Reverse
        ),
        label = "rotation"
    )

    // ЕСЛИ ЕСТЬ КАРТИНКА - показываем БЕЗ синего круга
    if (AppImages.TELEGRAM_LOGO != null) {
        AsyncImage(
            model = ImageRequest.Builder(LocalContext.current)
                .data(AppImages.TELEGRAM_LOGO)
                .crossfade(true)
                .build(),
            contentDescription = null,
            modifier = Modifier.size(140.dp), // Увеличенный размер, БЕЗ фона
            contentScale = ContentScale.Fit
        )
    } else {
        // ЕСЛИ НЕТ КАРТИНКИ - показываем иконку С синим фоном
        Box(
            modifier = Modifier
                .size(100.dp)
                .rotate(rotation)
                .clip(CircleShape)
                .background(
                    brush = Brush.linearGradient(
                        colors = listOf(TelegramColors.GradientStart, TelegramColors.GradientEnd)
                    )
                ),
            contentAlignment = Alignment.Center
        ) {
            Icon(
                imageVector = Icons.AutoMirrored.Filled.Send,
                contentDescription = null,
                modifier = Modifier.size(48.dp),
                tint = Color.White
            )
        }
    }
}
