var listBox = new ListBox
{
    ItemsSource = games, // вместо Items
    ItemTemplate = new FuncDataTemplate<Game>((game, _) =>
    {
        var button = new Button { Content = "Купить" };
        button.Click += (_, _) => BuyGame(game); // += вместо =
        return new StackPanel
        {
            Orientation = Avalonia.Layout.Orientation.Horizontal,
            Spacing = 10,
            Children =
            {
                new TextBlock { Text = game.Name, Width = 200 },
                new TextBlock { Text = game.Price + " ₽", Width = 80 },
                button
            }
        };
    })
};
