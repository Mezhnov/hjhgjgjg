#include <iostream>
#include <arpa/inet.h>
#include <unistd.h>

int main() {
    int sock = socket(AF_INET, SOCK_STREAM, 0);

    sockaddr_in addr{};
    addr.sin_family = AF_INET;
    addr.sin_port = htons(5555);
    inet_pton(AF_INET, "IP_СЕРВЕРА", &addr.sin_addr);

    connect(sock, (sockaddr*)&addr, sizeof(addr));

    std::string cmd, login, pass;
    std::cout << "REGISTER or LOGIN: ";
    std::cin >> cmd;
    std::cout << "Login: ";
    std::cin >> login;
    std::cout << "Password: ";
    std::cin >> pass;

    std::string msg = cmd + " " + login + " " + pass;
    send(sock, msg.c_str(), msg.size(), 0);

    char buffer[1024]{};
    recv(sock, buffer, sizeof(buffer), 0);
    std::cout << "Server: " << buffer << std::endl;

    close(sock);
}
