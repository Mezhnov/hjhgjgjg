                           VerticalOptions="Center"/>
                </Border>
                <Border Grid.Column="1" StrokeShape="RoundRectangle 3,3,0,0"
                        Stroke="Transparent" BackgroundColor="Transparent"
                        Padding="12,4" Margin="2,4,0,0">
                    <Label Text="Blueprint" FontSize="11" TextColor="#606060"
                           VerticalOptions="Center"/>
                </Border>
                <Border Grid.Column="2" StrokeShape="RoundRectangle 3,3,0,0"
                        Stroke="Transparent" BackgroundColor="Transparent"
                        Padding="12,4" Margin="2,4,0,0">
                    <Label Text="Material" FontSize="11" TextColor="#606060"
                           VerticalOptions="Center"/>
                </Border>
            </Grid>

            <!-- Main Viewport Area -->
            <Grid Grid.Row="1" BackgroundColor="#1A1A1A">
