                      Margin="10,10" RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,Auto,Auto,Auto">

                    <Border Grid.Row="0" Grid.Column="0" StrokeShape="RoundRectangle 3"
                            Stroke="#2A2A2A" BackgroundColor="#141414CC" Padding="6,3"
                            Margin="0,0,3,3">
                        <Label Text="Perspective" FontSize="10" TextColor="#909090"/>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" StrokeShape="RoundRectangle 3"
                            Stroke="#2A2A2A" BackgroundColor="#141414CC" Padding="6,3"
                            Margin="0,0,3,3">
                        <Label Text="Lit" FontSize="10" TextColor="#909090"/>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="2" StrokeShape="RoundRectangle 3"
                            Stroke="#2A2A2A" BackgroundColor="#141414CC" Padding="6,3"
                            Margin="0,0,3,3">
                        <Label Text="Show" FontSize="10" TextColor="#909090"/>
                    </Border>
                </Grid>

                <!-- Center - 3D Grid / Scene Representation -->
                <Grid VerticalOptions="Center" HorizontalOptions="Center">
                    <!-- Gizmo representation -->
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <!-- Simple scene representation -->
                        <Border StrokeShape="RoundRectangle 6" Stroke="#2A3040"
                                StrokeThickness="1" BackgroundColor="#1A2030"
                                WidthRequest="400" HeightRequest="250"
                                HorizontalOptions="Center">
                            <Grid>
                                <!-- Grid lines simulation -->
                                <BoxView BackgroundColor="#1C2230"/>

                                <!-- Horizon line -->
                                <BoxView HeightRequest="1" BackgroundColor="#2A3545"
                                         VerticalOptions="Center"/>

                                <!-- Vertical center line -->
                                <BoxView WidthRequest="1" BackgroundColor="#2A3545"
                                         HorizontalOptions="Center"/>

                                <!-- Transform Gizmo -->
                                <Grid HorizontalOptions="Center" VerticalOptions="Center"
                                      WidthRequest="80" HeightRequest="80">
                                    <!-- X axis (Red) -->
                                    <BoxView HeightRequest="2" WidthRequest="40"
                                             BackgroundColor="#E04040"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center"/>
                                    <!-- Y axis (Green) -->
                                    <BoxView HeightRequest="40" WidthRequest="2"
                                             BackgroundColor="#40C040"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center"/>
                                    <!-- Center point -->
                                    <Ellipse Fill="#FFFFFF" WidthRequest="6"
                                             HeightRequest="6" HorizontalOptions="Center"
                                             VerticalOptions="Center"/>
                                </Grid>

                                <!-- Selected object indicator -->
