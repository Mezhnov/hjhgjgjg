                                        StrokeThickness="2" StrokeDashArray="4,2"
                                        BackgroundColor="#F0A03010"
                                        WidthRequest="80" HeightRequest="50"
                                        HorizontalOptions="Center"
                                        VerticalOptions="End" Margin="0,0,0,60">
                                    <Label Text="SM_Couch" FontSize="9" TextColor="#F0A030"
