                           BackgroundColor="Transparent" VerticalOptions="Center"
                           x:Name="SearchEntry"/>
                    <Label Grid.Column="2" Text="ðŸ”½" FontSize="10" TextColor="#606060"
                           VerticalOptions="Center" Margin="0,0,8,0"/>
                </Grid>
            </Border>

            <!-- Scene Objects List -->
            <CollectionView Grid.Row="2" x:Name="SceneObjectsList"
                            SelectionMode="Single" BackgroundColor="#1A1A1A"
                            Margin="0,0,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeThickness="0" Padding="0" Margin="0"
                                BackgroundColor="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualState Name="Normal"/>
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor"
                                                    Value="#1A3A5C"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>

                            <Grid ColumnDefinitions="Auto,Auto,*,Auto,Auto"
                                  Padding="4,0,6,0" HeightRequest="26"
                                  BackgroundColor="{Binding RowBackground}">

                                <!-- Expand/Collapse Arrow or Indent -->
                                <Label Grid.Column="0"
                                       Text="{Binding ExpandIcon}"
                                       FontSize="10" TextColor="#606060"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center"
                                       WidthRequest="20"
                                       HorizontalTextAlignment="Center"/>

                                <!-- Icon -->
                                <Label Grid.Column="1"
                                       Text="{Binding Icon}"
                                       FontSize="13"
                                       VerticalOptions="Center"
                                       Margin="0,0,5,0"/>

                                <!-- Name -->
                                <Label Grid.Column="2"
                                       Text="{Binding DisplayName}"
                                       FontSize="12"
                                       TextColor="{Binding NameColor}"
                                       VerticalOptions="Center"
                                       LineBreakMode="TailTruncation"/>

                                <!-- Lock Icon -->
                                <Label Grid.Column="3"
                                       Text="{Binding LockIcon}"
                                       FontSize="11"
                                       TextColor="#606060"
                                       VerticalOptions="Center"
                                       Margin="4,0"
                                       IsVisible="{Binding ShowLock}"/>

                                <!-- Visibility Eye -->
                                <Label Grid.Column="4"
                                       Text="{Binding VisibilityIcon}"
                                       FontSize="12"
                                       TextColor="#505050"
                                       VerticalOptions="Center"
                                       Margin="2,0,4,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <!-- Left Splitter -->
        <BoxView Grid.Row="2" Grid.Column="1" BackgroundColor="#0A0A0A"/>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- CENTER - VIEWPORT -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
